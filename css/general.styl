/**
* Mixins - Font-weight
*/
light = 300
regular = 400
medium = 500
semibold = 600
bold = 700



/**
* Mixins - Viewport
*/
viewport = 1160px
sidebar =  220
gutter =   30


/**
* Mixins - Responsive
* @media (max-width screen-sm-min)
* @media (max-width screen-md-min)
* @media (max-width screen-lg-min)
*/
// Smaller devices (phones, 320px and down)
screen-xxs = 320px
// Small devices (phones, 480px and down)
screen-xs = 480px
// Small devices (tablets, 768px and down)
screen-sm = 768px
// Medium devices (desktops, 992px and down)
screen-md = 992px
// Medium devices (desktops, 1200px and down)
screen-lg = 1200px


/*
* Global
*/
.container
  min-width: 0
  max-width: viewport
  margin 0 auto
  width: auto


.button
  border-radius: 0
  box-shadow: none
  border none
  height: auto
  span
    display: table
    margin 0 auto
  &.sm
    font-size: 15px
    line-height: 15px
    padding: 9px 13px
    text-transform: uppercase
  &.md
    padding: 12px 17px
    font-size: 16px
    line-height: 12px
    text-transform: uppercase
  &.lg
    font-size: 20px
    padding: 18px 30px
    line-height: 14px
    text-transform: uppercase
  &.cta
    background-image: linear-gradient( 90deg, unquote($button_bg) 0%, unquote($button_bg_hover) 100%)
    color #fff
  &.flat
    background: #000
    color #fff




/*
* Base
* Estilo base do elementos do Html
*/
body
  font-family: 'Poppins', sans-serif
  background: #f5f5f5


input:not([type=button]):not([type=submit]):not([type=checkbox]):not([type=radio]):not([type=file])
  height: 36px
  line-height: 36px
  border-radius: 0 !important
  box-shadow: none
  border 1px solid #cccccc


.btn, button, input[type=button], input[type=reset], input[type=submit]
  //border 2px solid red


/*
* Components
* Componentes que se adaptam ao contexto
*/

/*
* Component - Messages
*/
.messages{
  > li{
    display block
    padding 10px 20px
    margin-bottom 20px
    font-size 14px
  }
  .success-msg{
