/*
* Module - Messages
*/
.messages{
  > li{
    display block
    padding 10px 20px
    margin-bottom 20px
    font-size 14px
  }
  .success-msg{
    border 1px solid #2baf60
    background #c8efc0
    color #1d904b
  }
  .error-msg{
    border 1px solid #d92100
    background #ffdcdc
    color #d92100
  }
  .notice-msg{
    border 1px solid #f7be07
    background #f9f0d5
    color #f7be07
  }
}


