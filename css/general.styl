/**
* Mixins - Font-weight
*/
light = 300
regular = 400
medium = 500
semibold = 600
bold = 700



/**
* Mixins - Viewport
*/
viewport = 1160px
sidebar =  220
gutter =   30


/**
* Mixins - Responsive
* @media (max-width screen-sm-min)
* @media (max-width screen-md-min)
* @media (max-width screen-lg-min)
*/
// Smaller devices (phones, 320px and down)
screen-xxs = 320px
// Small devices (phones, 480px and down)
screen-xs = 480px
// Small devices (tablets, 768px and down)
screen-sm = 768px
// Medium devices (desktops, 992px and down)
screen-md = 992px
// Medium devices (desktops, 1200px and down)
screen-lg = 1200px


/*
* Global
*/
.container
  min-width: 0
  max-width: viewport
  margin 0 auto
  width: auto


/*
* Base
* Estilo base do elementos do Html
*/
body
  font-family: 'Poppins', sans-serif
  background: #f5f5f5


/*
* Components
* Componentes que se adaptam ao contexto
*/

/*
* Component - Messages
*/
.messages{
  > li{
    display block
    padding 10px 20px
    margin-bottom 20px
    font-size 14px
  }
  .success-msg{
    border 1px solid #2baf60
    background #c8efc0
    color #1d904b
  }
  .error-msg{
    border 1px solid #d92100
    background #ffdcdc
    color #d92100
  }
  .notice-msg{
    border 1px solid #f7be07
    background #f9f0d5
    color #f7be07
  }
}



/*
* Module - Menu
*/
.categories--justify
  background: none
  .a--0
    background: none
    display: flex
    flex-flow: row wrap
    align-items: flex-end
    height: auto
    img
      margin-bottom: 14px
      margin-top: 20px
      margin 20px auto 14px auto
      order 1
    &:after
      content ''
      flex 0 0 100%
      order 2
    span
      order 3
      color #fff
      font-size: 12px
      text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.4);
      text-transform: uppercase
      min-height: 43px
      max-width: 117px
      line-height: 14px
      white-space: normal
    &:before
      content ''
      transform: skewX(-13deg)
      display: block
      background: unquote($color3_bg_hover)
      border 1px solid #666666
      border-top 0
      height: 100%
      position: absolute
      border-right 0
      z-index: -1
      top 0
      width: 100%
  .li--0
    &:hover
      .a--0
        background: none
        &:before
          background: #454545
  .box--1
    background: unquote($color2_bg_hover)
  .a--1
    font-size: 14px
    color unquote($color3_bg)
    text-transform: uppercase
  .li--1
    &:hover
      .a--1
        background: #404040
        color #fff



/*
* Module - Search
*/
.search
  position: relative
  &:before
    content ''
    transform: skewX(-13deg)
    background: unquote($color3_bg_hover)
    border 1px solid #666666
    height: 100%
    position: absolute
    border-right 0
    z-index: -1
    top 0
    width: 403px
    right: 0
    display: none
  input:not([type=button]):not([type=submit]):not([type=checkbox]):not([type=radio]):not([type=file])
    background: none
    box-shadow: none
    border 0
    font-size: 14px
    color unquote($color3_bg)
    height: 110px
    padding: 0px 25px
  .input-box
    position: absolute
    left auto
    right 0
    z-index: 20
    width: 403px
    height: 100%
    display: none
  .search__button
    box-shadow: none
    background: none
    cursor pointer
    height: 110px
  &.on
  &:hover
    .input-box
      display: block
    &:before
      display: block


/*
* Module - Login
*/
.loginout
  font-size: 11px
  color #b2b2b2
  display: flex
  flex-flow: row wrap
  a
    color #ffffff
  > div
    margin-left: 34px


/*
* Module - Sac
*/
.textblock-sac
  font-size: 11px
  display: flex
  align-items: center
  color #b2b2b2
  &:before
    content url($sac_icon)
    margin-right: 5px


/*
* Module - Support
*/
.textblock-support
  font-size: 11px
  display: flex
  align-items: center
  color #b2b2b2
  &:before
    content url($support_icon)
    margin-right: 5px


/*
* Module - Logo
*/
.logo
  img
    max-width: 94px
    height: auto


/*
* Module - Mycart
*/
.mycart__header
  a
    height: auto
    width: auto
    border 0
    box-shadow: none
    border-radius: 0
  .ico
    width: 18px
    height: 18px
    margin-right: 14px
    fill unquote($color1_bg)
  .qtd
    position: static
    width: auto
    height: auto
    font-size: 16px
    line-height: 18px
    background: none
    border-radius: 0
    display: block

.mycart
  &:hover
    .mycart__header
      a
        background: none


/*
* Marcas
*/
.brands
  background: #fff
  padding: 34px 0
  &:before
    content 'Grandes Marcas'
    display: block
    text-align: center
    color #ff3e5f
    text-transform: uppercase
    font-size: 30px
    font-weight: medium


/*
* Module - products container
*/
.products__title
  font-size: 30px
  color unquote($color1_bg)
  text-transform: uppercase
  font-weight: medium
  display: flex
  flex-flow: row wrap
  align-items: center
  line-height: 29px
  .subtitle
    display: flex
    color #666666
    font-size: 16px
    text-transform: uppercase
    line-height: 23px
    align-items: center
    margin-left: 14px
    margin-bottom: 0
    flex 1 1 auto
    &:before
      height: 40px
      content ''
      display: block
      border-left 1px solid #e6e6e6
      margin-right: 16px
      transform: skewX(-10deg)
    &:after
      content ''
      height: 40px
      background: #fff
      transform: skewX(-10deg)
      width: 100%


/*
* Module - Product case
*/
.products__case
  background: none
  box-shadow: none


/*
* Module - Header
*/
header.header
  justify-content: space-between
  padding: 6px 0
  .textblock-sac
    order 1
    margin-right: 15px
  .textblock-support
    order 2
    align-self: flex-start
    margin-right: auto
  .loginout
    order 3
    margin-right: 30px
  .mycart
    order 4
    height: auto



/*
* Module - Header container
*/
.header-container
  background #373737
  display: flex
  flex-flow: row wrap
  justify-content: center
  align-items: center
  header.header
    @extend .container
    order 1
    flex 0 0 100%
    margin-bottom: 0
  &:before
    content ''
    order 2
    flex 0 0 100%
    border-top 1px solid #666666
  .logo
    order 2
    margin-bottom: 0
    margin-right: 35px
  .categories
    order 3
    &:not(.categories--mini)
      margin-right: 2px
  .search
    order 4
    height: 110px
    margin-bottom: 0


/*
* Main- container
*/
.main-container
  .main
    @extend .container


