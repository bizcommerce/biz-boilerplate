/*
* Module - Messages
*/
.messages{
  > li{
    display block
    padding 10px 20px
    margin-bottom 20px
    font-size 14px
  }
  .success-msg{
    border 1px solid #2baf60
    background #c8efc0
    color #1d904b
  }
  .error-msg{
    border 1px solid #d92100
    background #ffdcdc
    color #d92100
  }
  .notice-msg{
    border 1px solid #f7be07
    background #f9f0d5
    color #f7be07
  }
}

/*
* Module - filter_menu
*/
.filter_menu
  background unquote($color1_bg_hover)
  display flex
  flex-flow row wrap
  align-items center
  padding 0px 6px 0px 33px
  /*
  * &:before -  Setinha do select cima
  * &:after -  Setinha do select baixo
  * &:first-child - Tem margem para direita maior
  */
  fieldset
    vertical-align middle
    position relative
    margin-right 18px
    &:first-child
      margin-right 29px
    &:before, &:after
      content ''
      background #fff
      position absolute
      background #fff embedurl('../svg/arrow-down-icon.svg') no-repeat center center
      background-size 6px 5px
      border-radius 0px 0px 5px 5px
      box-shadow 0 2px 3px rgba(0,0,0,.3)
      height 10px
      width 10px
    &:before
      right 0px
      top 1px
      transform rotate(180deg)
    &:after
      right 0px
      bottom 1px
    .label-text
      color rgba(#ffffff, .7)
      font-size 10px
      line-height 9px
      display inline-block
      width 30px
      text-align right
      margin-right 10px
    select
      appearance none
      background none
      border-radius 0px
      border none
      font-size 17px
      font-style italic
      color #ffffff
      text-transform uppercase
      box-shadow none
      height 21px
      width auto
      min-width 90px
      display inline-block
      position relative
      z-index 1
  input[type=submit]
    width 26px
    height 26px
    border-radius 50%
    display block
    padding 0px
    text-align center
    background #fff
    box-shadow none
    color #c60c30
    font-style italic
    text-shadow none

/*
* Module - Menu Principal
*/
.menu-principal
  background blue
  display flex
  flex-flow row wrap
  justify-content center

