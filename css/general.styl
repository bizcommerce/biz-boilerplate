/*
* Global
* Classes globais que devem ser extendidas por componentes
*/
.dropdown
  position: relative

.dropdown-trigger
  position: relative
  z-index 3
  &:before
    content ''
    display: block
    width: 0
    height: 0
    border-style: solid
    border-width: 0 7px 8px 7px
    border-color: transparent transparent #232846 transparent
    position: absolute
    top calc(100% + 3px)
    left calc(50% - 7px)
    z-index: 2
    display: none
  &:after
    content ''
    display: block
    width: 0
    height: 0
    border-style: solid
    border-width: 0 7px 8px 7px
    border-color: transparent transparent unquote($color1_bg_hover) transparent
    position: absolute
    left calc(50% - 7px)
    top calc(100% + 6px)
    z-index: 3
    display: none
  &.active
    &:before
    &:after
      display: block


.dropdown-content
  position: absolute
  background: unquote($color1_bg_hover)
  box-shadow: 0px 5px 0px 0px rgba(0, 0, 0, 0.2)
  border-radius: 13px
  padding 20px
  border 2px solid rgba(#000, .1)
  top calc(100% + 11px)
  z-index: 2
  display: none
  &:before
    content ''
    display: block
    background: transparent
    height: 20px
    width: 100%
    position: absolute
    left 0
    top -20px
  &.active
    display: block


/*
* Module - Buttons
*/
.button
