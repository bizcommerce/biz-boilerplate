/*
* Utilities
*/
@import '../node_modules/nib'

/*
* Libraries
*/
@import url("//fonts.googleapis.com/css?family=Exo+2:400,500italic,600,500,400italic,600italic,700,300italic,300|Titillium+Web:400,600");

/**
* Mixins - Font-weight
*/
light = 300
regular = 400
medium = 500
semibold = 600
bold = 700

/**
* Mixins - Viewport
*/
viewport = 980
sidebar =  220
gutter =   30

/**
* Mixins - Responsive
* @media (max-width screen-sm-min)
* @media (max-width screen-md-min)
* @media (max-width screen-lg-min)
*/
// Smaller devices (phones, 320px and down)
screen-xxs = 320px
// Small devices (phones, 480px and down)
screen-xs = 480px
// Small devices (tablets, 768px and down)
screen-sm = 768px
// Medium devices (desktops, 992px and down)
screen-md = 992px
// Medium devices (desktops, 1200px and down)
screen-lg = 1200px


/*
* Base
* Estilo base do elementos do Html
*/
body
  font-style italic
  font-weight semibold

/*
* Global
* Classes globais que devem ser extendidas por componentes
*/

/*
* Layout - Container
*/
.container
  min-width 0px
  max-width unit(viewport, px)
  width auto
  margin 0 auto

/*
* Module - Dropdown
* &:hover - Deve mostrar o .dropdown-content
*/
.dropdown
  position relative
  &:hover
    .dropdown-content
      display block

.dropdown-content
  display none
  position absolute
  left 0px
  top 100%
  z-index 22
  width auto


/*
* Modules
* Componentes que se adaptam ao contexto
*/


/*
* Module - Messages
*/
.messages{
  > li{
    display block
    padding 10px 20px
    margin-bottom 20px
    font-size 14px
  }
  .success-msg{
    border 1px solid #2baf60
    background #c8efc0
    color #1d904b
  }
  .error-msg{
    border 1px solid #d92100
    background #ffdcdc
    color #d92100
  }
  .notice-msg{
    border 1px solid #f7be07
    background #f9f0d5
    color #f7be07
  }
}

/*
* Module - Welcome
*/
.login-create-container
  .login-create
    color #666666
    font-size 12px
    font-weight regular
    color #666666
    height auto
    a
      color #666666
      font-weight semibold

/*
* Module - Carrinho
*/
.mycart-container
  .mycart
    > a
        background none
        box-shadow none
        padding-left 52px
        width auto
        height auto
        position relative
        &:before
          content ''
          background unquote($color1_bg_hover)
          border-radius 50%
          display block
          height 40px
          width 40px
          position absolute
          left 0px
        .icon
          width 22px
          height 20px
          top initial
          margin 0px
          left 9px
          top 11px
        > .qtd
            left 28px
            width 17px
            height 17px
            background #ffa200
            font-size 11px
        .txt
          width auto
          color unquote($color1_bg_hover)
          text-align left
          font-size 16px
          padding-top 6px
          .qtd
            width auto
            height auto
            background none
            color unquote($color1_bg_hover)
            position static
            text-align left
            font-size 12px
            padding-top 5px
            line-height 12px

/*
* Module - Busca
*/
.search-container
  .input-box
    .search-label
      display none
    .search-input
      border none
      padding 0px
      height auto
      line-height initial
      box-shadow none
      font-weight medium
      font-size 13px
      text-transform uppercase
      font-style italic
      color #666666
      background #f3f3f3
      height 40px
      padding 0px 14px
  /*
  * &:hover - Icone deve ficar branco
  */
  .search-button
    display flex
    align-items center
    justify-content center
    height 40px
    line-height initial
    width auto
    &:hover
      .ico
        fill #fff
    span
      line-height initial
    .ico
      width 15px
      height 15px
      fill unquote($color1_bg_hover)
      display inline-block

/*
* Module - Call center
* header.header & - Sobrescreve propriedades
*/
.call-center
  header.header &
    font-size 12px
    line-height 9px
    font-weight medium
    padding 0px
    height auto
    display flex
    flex-flow row wrap
    align-items center
    padding-right 3px
    strong
      font-weight semibold
      font-size 16px
      line-height 15px
      margin-left 7px
      &:first-child
        margin-right 7px

/*
* Module - Compare
* &:not(.hasproducts) - Diminui o padding do botão
*/
.compare-container
  display table
  .compare
    display table
    header
      display none
    main
      display table
    .content
      display table
    .amount
      display none
    .compare-items
      display none
    .actions
      display table
      a
        display none
    .button
      border-radius 20px
      font-size 12px
      font-weight semibold
      font-style italic
      text-transform uppercase
      color #fff
      box-shadow none
      padding 0px
      line-height 20px
      padding 0px 14px
      display block
      height auto
      background #333333 embedurl('../img/arrow-up-icon.svg') no-repeat 14px 5px
      padding-left 29px
  &:not(.hasproducts)
    .compare
      .button
        padding-left 26px
        background-position 12px 5px


/*
* Module - Header
*/
header.header
  padding-bottom 0px
  //box-shadow inset 0 43px 0 #ffffff, inset 0 44px 0 #eeeeee
  align-items flex-start
  justify-content flex-end
  .login-create-container
    margin-top 14px
    order 1
  .compare-container
    margin-top 12px
    order 2
    margin-right 20px
  .call-center
    margin-top 14px
    order 3
  .before
    flex 0 1 840px
    border-top 1px solid #eeeeee
    margin-top 12px
    margin-bottom 20px
  .logo-container
    margin-top -41px
    margin-right 28px
  .search-container
    margin-left 0px
    margin-right 28px


/*
* Module - Header Container
*/
.header-container
  box-shadow none

/*
* Module - Menu configurável
* .menu-principal &
*/
.mb-menu
  .menu-principal &
    background #000
    padding 20px 33px 12px 18px
    li
      margin-bottom 20px
      a
        font-size 14px
        text-transform uppercase
        color #fff
        display block
        line-height 14px


/*
* Module - Menu categories
* &.vertical - Deve ser igual o Menu configurável
* &.normal -
*/
.main-menu
  &.vertical
    ul.level0
      @extend .menu-principal .mb-menu
    /*
    * li.level0
    * &:hover - Reseta o estilo do tema da a.level0
    */
    li.level0
      @extend .menu-principal .mb-menu li
      &:hover
        a.level0
          background none
    a.level0
      padding 0px
      background none
      width auto
      display block
      @extend .menu-principal .mb-menu li a
      .name
        font-size inherit
  &.normal
    /*
    * li.level0
    * &.all - Deve dar espaço livre ao div.level0
    */
    li.level0
      padding-bottom 0px
      &.all
        div.level1
          width auto
    a.level0
      height auto
      min-height 50px
      padding 0px 20px
      .name
        .icon
          width 20px
          height 17px
          fill #fff

/*
* Module - Marcas
*/
.brands-container
  margin 0px
  &.list
    .brands
      padding 0px
      > .list
          margin 0px
  .menu-principal &
    .brands
      > .list
          justify-content flex-start
          padding 10px
          min-width 500px
          .item
            border 1px solid #dddddd
            border-width 0px 1px 1px 0px
            padding 15px
            margin 0px !important
            flex 0 0 120px
            height 60px
            &:nth-child(4n)
              border-right none
            &:nth-last-child(-n+4)
              border-bottom none
  .brands
    border none
    .marca_nome
      display none
    img
      max-width 100%


/*
* Module - filter_menu
*/
.filter_menu
  background unquote($color1_bg_hover)
  display flex
  flex-flow row wrap
  align-items center
  padding 0px 6px 0px 33px
  /*
  * &:before -  Setinha do select cima
  * &:after -  Setinha do select baixo
  * &:first-child - Tem margem para direita maior
  */
  fieldset
    vertical-align middle
    position relative
    margin-right 18px
    &:first-child
      margin-right 29px
    &:before, &:after
      content ''
      background #fff
      position absolute
      background #fff embedurl('../svg/arrow-down-icon.svg') no-repeat center center
      background-size 6px 5px
      border-radius 0px 0px 5px 5px
      box-shadow 0 2px 3px rgba(0,0,0,.3)
      height 10px
      width 10px
    &:before
      right 0px
      top 1px
      transform rotate(180deg)
    &:after
      right 0px
      bottom 1px
    .label-text
      color rgba(#ffffff, .7)
      font-size 10px
      line-height 10px
      display inline-block
      width 30px
      text-align right
      margin-right 10px
      text-transform uppercase
    select
      appearance none
      background none
      border-radius 0px
      border none
      font-size 17px
      font-style italic
      color #ffffff
      text-transform uppercase
      box-shadow none
      height 21px
      width auto
      min-width 90px
      display inline-block
      position relative
      font-weight semibold
      z-index 1
      letter-spacing 1px
  input[type=submit]
    width 26px
    height 26px
    border-radius 50%
    display block
    padding 0px
    text-align center
    background #fff
    box-shadow none
    color #c60c30
    font-style italic
    text-shadow none

/*
* Module - Menu Principal
*/
.menu-principal
  background unquote($color1_bg)
  display flex
  flex-flow row wrap
  justify-content center
  align-items stretch
  position relative
  &:after
    content ''
    width 100%
    background unquote($color1_bg_hover)
    display block
    height 100%
    position absolute
  > .main-menu
      z-index 25
  /*
  * .item
  * &.brands - Reseta borda da classe brands
  */
  > .item
      padding 10px 20px 0px 20px
      background unquote($color1_bg)
      &:hover
        background #000
      .text
        font-size 12px
        color #fff
        text-transform uppercase
        font-style italic
        padding-bottom 10px
        display block
        cursor pointer
        strong
          font-weight 800
          background embedurl('../img/arrow-down-icon.svg') no-repeat center right
          padding-right 20px
          display table
          font-size 18px
      &.brands
        border none
        .dropdown-content
          background #fff
          box-shadow 0px 0px 10px 0px rgba(0, 0, 0, 0.3)

/*
* Layout
* Estrutura tamanhos e ordem dos elementos no layout
*/

/*
* Layout - Header container
*/
.header-container
  header.header
    @extend .container

/*
* Layout - .wrapper
*/
.wrapper
  .header-container
    margin-bottom 25px


