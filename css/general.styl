/*
* Module - Menu
*/
.categories--justify
  background: none
  .a--0
    background: none
    display: flex
    flex-flow: row wrap
    align-items: flex-end
    height: auto
    img
      margin-bottom: 14px
      margin-top: 20px
      margin 20px auto 14px auto
      order 1
    &:after
      content ''
      flex 0 0 100%
      order 2
    span
      order 3
      color #fff
      font-size: 12px
      text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.4);
      text-transform: uppercase
      min-height: 43px
      max-width: 117px
      line-height: 14px
      white-space: normal
    &:before
      content ''
      transform: skewX(-13deg)
      display: block
      background: unquote($color3_bg_hover)
      border 1px solid #666666
      border-top 0
      height: 100%
      position: absolute
      border-right 0
      z-index: -1
      top 0
      width: 100%
  .li--0
    &:hover
      .a--0
        background: none
        &:before
          background: #454545
  .box--1
    background: unquote($color2_bg_hover)
  .a--1
    font-size: 14px
    color unquote($color3_bg)
    text-transform: uppercase
  .li--1
    &:hover
      .a--1
        background: #404040
        color #fff
  @media(max-width screen-sm)
    background: #484848
    .ul--0
      display: block



/*
* Module - Search
*/
.search
  position: relative
  &:before
    content ''
    transform: skewX(-13deg)
    background: unquote($color3_bg_hover)
    border 1px solid #666666
    height: 100%
    position: absolute
    border-right 0
    z-index: -1
    top 0
    width: 403px
    right: 0
    display: none
  input:not([type=button]):not([type=submit]):not([type=checkbox]):not([type=radio]):not([type=file])
    background: none
    box-shadow: none
    border 0
    font-size: 14px
    color unquote($color3_bg)
    height: 110px
    padding: 0px 25px
  .input-box
    position: absolute
    left auto
    right 0
    z-index: 20
    width: 403px
    height: 100%
    display: none
  .search__button
    box-shadow: none
    background: none
    cursor pointer
    height: 110px
  &.on
  &:hover
    .input-box
      display: block
    &:before
